
@{
    ViewBag.Title = "Processes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Processes</h2>

<table id="processes" class="table table-bordered table-hover">
    <thead>
        <tr> 
            <th>Process name</th>
        </tr> 
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#processes").DataTable({
                ajax: {
                    url: "/api/getprocesses",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "ProcessName",
                        render: function(data) {
                            return "<a href='/processes/getdetails/" + data.ProcessName + "'>" + data.ProcessName + "</a>";
                        }
                    }
                ]
            }); 
     });
    </script>
}
