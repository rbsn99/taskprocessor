
@{
    ViewBag.Title = "Processes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Processes</h2>

<table id="processes" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Process name</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#processes").DataTable({
                ajax: {
                    url: "/api/processes",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "ProcessName",
                        render: function(data, type, process) {
                            return "<a href='/processes/details/" + process.Id + "'>" + process.ProcessName + "</a>";
                        }

                    },
                    {
                        data: "ProcessId",
                        render: function(data, type, process) {
                            return "<a href='/processes/settings/" + process.Id + "'> Settings </a>";
                        }

                    }
                ]
            });
        });
    </script>
}
